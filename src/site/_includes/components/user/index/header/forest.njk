<div id="forest-graph">
    <div class="forest-body">
        {% for row in userComputed.forest.trees %}
        <div class="forest-row">
            {% for tree in row %}
            {% if tree[seedling] == 0 %}
            <span class="tree plane">
                <span></span>
            </span>
            {% else %}
            <a class="tree" href="{{tree[sapling]}}" title="{{tree[tree]}}">
                <img src="https://cdn.jsdelivr.net/gh/blleng/images/upload/{{tree[seedling]}}.svg" alt="" style="width: auto;height: {{5 + (10 * tree[tree])}}px;" />
            </a>
            {% endif %}
            {% endfor %}
        </div>
        {% endfor %}
    </div>
    <div class="forest-legends">
        {% for count in userComputed.forest.legends %}
        <div class="stat"><img src="https://cdn.jsdelivr.net/gh/blleng/images/upload/{{count.icon}}.svg" alt="{{count.label}}" />{{count.count}} {% if count.count > 1 %}{% if count.plural %}{{count.plural}}{% else %}{{count.label}}s{% endif %}{% else %}{{count.label}}{% endif %}</div>
        {% endfor %}
    </div>
</div>